@model List<EmployeeLogManager.Model.Entities.Role>

@{
    ViewData["Title"] = "List Role";
}

<div class="container mt-4">
    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Role" asp-action="Create" class="btn btn-success">Add Role</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Role</th>
                <th style="text-align:center;">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int i = 1;
                foreach (var role in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@role.Name</td>
                        <td class="d-flex gap-2 justify-content-center align-content-center">
                            <a asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id" title="Edit">
                                <i class="fas fa-edit" style="font-size: 14px; color:#20ac6a;"></i>
                            </a>
                            <form asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id" method="post" style="display:inline;">
                                <button type="submit" class="border-0 bg-transparent p-0" onclick="return confirm('Are you sure to delete this role?');">
                                    <i class="fas fa-trash" style="font-size: 14px; color:crimson;"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    i++;
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No Roles Found</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
