@model EmployeeLogManager.Model.ViewModel.RoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}

<div class="container mt-4">
    <div class="shadow p-5 bg-white" style="width: 100%; margin:auto;">
        <h4 class="mb-4 text-center">Edit Role</h4>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary mt-3 px-4">Update Role</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
