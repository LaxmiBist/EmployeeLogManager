@model EmployeeLogManager.Model.ViewModel.DailyLogViewModel
@{
    ViewData["Title"] = "Daily Log Details";
}

<main>
    <div class="container d-flex flex-column gap-4">
        <a asp-controller="DailyLog" asp-action="Index" class="text-decoration-none"><i class="fa-solid fa-arrow-left-long"></i></a>
        <!-- Header Section -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h5>Date</h5>
                        <p>@Model.Date.ToShortDateString()</p>
                    </div>
                    <div class="col-md-4">
                        <h5>Department</h5>
                        <p>@Model.Department</p>
                    </div>
                    <div class="col-md-4">
                        <h5>Project</h5>
                        <p>@Model.ProjectName</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tasks Table -->
                <table class="table table-bordered table-striped">
        
                    <thead class="table-dark">
                        <tr>
                            <th class="fw-normal">#</th>
                            <th class="fw-normal">Task</th>
                            <th class="fw-normal">Notes</th>
                            <th class="fw-normal">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Tasks != null && Model.Tasks.Any())
                        {
                            var count = 1;
                            @foreach (var task in Model.Tasks)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@task.Task</td>
                                    <td>@task.Notes</td>
                                    <td>
                                        <span class="badge @(task.Status == "Completed" ? "bg-success" : "bg-warning")">
                                            @task.Status
                                        </span>
                                    </td>
                                </tr>
                                count++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">No Tasks Found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
     
</main>

